<p id="notice"><%= notice %></p>

<div class="detail">
  <div>
    <%= image_tag @photo.image_url.to_s %>  
  </div>
  <p>投稿日:<%= @photo.created_at.strftime("%Y-%m-%d") %></p>
  <h3><%= @photo.title %></h3>
  <h3><%= @photo.person.name %> さん</h3>
  <p><%= @photo.description %></p>
</div>

<div class="comments">
  <table>
    <tr>
      <th class="header_date">日付</th>
      <th class="header_person">ユーザ</th>
      <th class="header_comment">コメント</th>
    </tr>
  
    <% @comments.each do |comment| %>
     <tr>
       <td class="list_date"><%= comment.created_at.strftime("%Y-%m-%d") %></td>
       <td class="list_person"><%= comment.person.name %>
       <td class="list_comment"><%= comment.comment %></td>
     </tr>
   <% end %>
  </table>
</div>

<%= render 'form_comment' %>

